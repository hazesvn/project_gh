<section class="p-8 bg-gray-50">
    <div class="container mx-auto">
        <nav class="navbar navbar-light bg-light flex justify-center mb-6">
            <a class="navbar-brand" href="#" style="font-family: 'Great Vibes', cursive; font-size: 2rem; color: #d76d77;">
                Welcome to BookHaven
            </a>
        </nav>

        {{#each categories}}
            <div class="category-section mb-10">
                <h2 class="text-2xl font-bold text-gray-800 mb-6">{{this.name_category}}</h2>

                <div class="relative">
                    <!-- Nút mũi tên trái -->
                    <button class="prev-btn absolute left-0 top-1/2 transform -translate-y-1/2 bg-white p-3 rounded-full shadow-lg hover:bg-gray-200 transition z-10 hidden">
                        ❮
                    </button>

                    <div class="overflow-hidden w-full">
                        <div class="product-slider flex gap-6 transition-transform duration-500 ease-in-out" data-category="{{@index}}">
                            {{#each this.products}}
                                <div class="product-card w-72 flex-shrink-0 bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transform transition hover:-translate-y-1">
                                    <img src="{{this.image_product}}" alt="{{this.name_product}}" class="w-full h-60 object-cover">
                                    <div class="p-4 text-center">
                                        <h3 class="text-lg font-medium text-gray-800">{{this.name_product}}</h3>
                                        <p class="text-red-500 font-semibold mt-2 text-lg">{{this.price}} VND</p>
                                        <a href="/products/{{this.id_product}}" class="inline-block mt-3 px-5 py-2 bg-blue-600 text-white text-sm rounded-md hover:bg-blue-700 transition">
                                            Xem chi tiết
                                        </a>
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    </div>

                    <!-- Nút mũi tên phải -->
                    <button class="next-btn absolute right-0 top-1/2 transform -translate-y-1/2 bg-white p-3 rounded-full shadow-lg hover:bg-gray-200 transition z-10 hidden">
                        ❯
                    </button>
                </div>
            </div>
        {{/each}}
    </div>
</section>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".category-section").forEach((section) => {
            let slider = section.querySelector(".product-slider");
            let nextBtn = section.querySelector(".next-btn");
            let prevBtn = section.querySelector(".prev-btn");

            let currentIndex = 0;
            let productCount = slider.children.length;
            let visibleItems = Math.min(3, productCount); // Hiển thị tối đa 3 sản phẩm
            let maxIndex = productCount - visibleItems;

            function updateSlider() {
                let offset = -currentIndex * (100 / visibleItems);
                slider.style.transform = `translateX(${offset}%)`;
                prevBtn.classList.toggle("hidden", currentIndex === 0);
                nextBtn.classList.toggle("hidden", currentIndex >= maxIndex);
            }

            nextBtn.addEventListener("click", function () {
                if (currentIndex < maxIndex) {
                    currentIndex++;
                    updateSlider();
                }
            });

            prevBtn.addEventListener("click", function () {
                if (currentIndex > 0) {
                    currentIndex--;
                    updateSlider();
                }
            });

            if (productCount > visibleItems) {
                nextBtn.classList.remove("hidden");
            }
        });
    });
</script>
