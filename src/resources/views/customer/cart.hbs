<section class="p-8 bg-gray-50">
    <div class="container mx-auto">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Giỏ hàng của bạn</h2>
        {{#if cart.length}}
            <form action="/cart/update" method="POST">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-gray-200 text-gray-700">
                            <th class="p-3 border-b">Sản phẩm</th>
                            <th class="p-3 border-b">Giá</th>
                            <th class="p-3 border-b">Số lượng</th>
                            <th class="p-3 border-b">Tổng</th>
                            <th class="p-3 border-b text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody class="text-gray-600">
                        {{#each cart}}
                        <tr class="hover:bg-gray-100 transition duration-200">
                            <td class="p-3 border-b flex items-center">
                                <img src="{{this.image}}" alt="{{this.name}}" class="w-20 h-20 object-cover mr-4">
                                <span>{{this.name}}</span>
                            </td>
                            <td class="p-3 border-b">{{this.price}} VND</td>
                            <td class="p-3 border-b">
                                <input type="number" name="quantity" value="{{this.quantity}}" class="w-16 p-2 border rounded">
                                <input type="hidden" name="productId" value="{{this.productId}}">
                            </td>
                            <td class="p-3 border-b">{{multiply this.price this.quantity}} VND</td>
                            <td class="p-3 border-b text-center">
                                <form action="/cart/remove" method="POST" style="display: inline;">
                                    <input type="hidden" name="productId" value="{{this.productId}}">
                                    <button type="submit" class="text-red-500 hover:text-red-700 transition duration-200">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                <div class="text-right mt-6">
                    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Cập nhật giỏ hàng</button>
                </div>
            </form>
        {{else}}
            <p class="text-gray-600">Giỏ hàng của bạn hiện đang trống.</p>
        {{/if}}
    </div>
</section>