{{!-- Sử dụng layout 'main' --}}
<section class="p-6 bg-gray-100 min-h-screen">
    <div class="container mx-auto">
        <!-- Tiêu đề -->
        <h3 class="text-center mb-4 text-3xl font-bold text-gray-700">Bảng Tổng Quát</h3>

        <!-- Thống kê chính -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <!-- Tổng Sản Phẩm -->
            <div class="bg-white p-8 rounded-lg shadow-lg transition-transform transform hover:scale-105">
                <div class="flex flex-col items-center">
                    <div class="bg-blue-500 text-white p-6 rounded-full shadow-md mb-4">
                        <i class="fas fa-box text-4xl"></i>
                    </div>
                    <h4 class="text-lg font-semibold text-gray-600">Tổng Sản Phẩm</h4>
                    <p class="text-4xl font-bold text-gray-800 mt-2">{{totalProducts}}</p>
                </div>
            </div>

            <!-- Tổng Khách Hàng -->
            <div class="bg-white p-8 rounded-lg shadow-lg transition-transform transform hover:scale-105">
                <div class="flex flex-col items-center">
                    <div class="bg-red-500 text-white p-6 rounded-full shadow-md mb-4">
                        <i class="fas fa-users text-4xl"></i>
                    </div>
                    <h4 class="text-lg font-semibold text-gray-600">Tổng Khách Hàng</h4>
                    <p class="text-4xl font-bold text-gray-800 mt-2">{{totalCustomers}}</p>
                </div>
            </div>

            <!-- Tổng Đơn Hàng -->
            <div class="bg-white p-8 rounded-lg shadow-lg transition-transform transform hover:scale-105">
                <div class="flex flex-col items-center">
                    <div class="bg-green-500 text-white p-6 rounded-full shadow-md mb-4">
                        <i class="fas fa-shopping-cart text-4xl"></i>
                    </div>
                    <h4 class="text-lg font-semibold text-gray-600">Tổng Đơn Hàng</h4>
                    <p class="text-4xl font-bold text-gray-800 mt-2">{{totalOrders}}</p>
                </div>
            </div>

            <!-- Tổng Doanh Thu -->
            <div class="bg-white p-8 rounded-lg shadow-lg transition-transform transform hover:scale-105">
                <div class="flex flex-col items-center">
                    <div class="bg-yellow-500 text-white p-6 rounded-full shadow-md mb-4">
                        <i class="fas fa-dollar-sign text-4xl"></i>
                    </div>
                    <h4 class="text-lg font-semibold text-gray-600">Tổng Doanh Thu</h4>
                    <p class="text-4xl font-bold text-gray-800 mt-2">{{totalRevenue}} VNĐ</p>
                </div>
            </div>
        </div>
    </div>
</section>